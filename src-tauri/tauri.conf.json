{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bel-sekolah",
  "version": "0.1.0",
  "identifier": "com.matthelosh.bel-sekolah",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "bel-sekolah",
        "width": 1024,
        "height": 800,
        "resizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; audio-src 'self' asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "resources": [
      "../public/lagunasional"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "opener": {}
  }
}
